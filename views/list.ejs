<%- include('header') -%> 
    <div class="box" id="heading">
        <h1><%= listTitle %> </h1>
    </div>
    <div class="box">
        <% for( let index = 0; index < newitem.length; index++ ) { %>
        <div class="item">
            <input type="checkbox">
            <span class="checkmark">
                <%= newitem[index] %> 
            </span>
        </div>
    <% } %>  
    <br>
    <form action="/" method="post" class="item">
        <input type="text" name="task" id="task" placeholder="Add Item" autocomplete="off">
        <button type="submit" name="button" value="<%= listTitle %>">+</button>
    </form>      
    </div>
<%- include('footer') -%>    
    
